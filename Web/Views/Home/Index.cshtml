@using API.Models
@model IEnumerable<Course>

@{
    ViewData["Title"] = "Курсы";
}

<style>
    .asd {
        margin-top: 100px;
    }

    body {
        font-family: 'Tw Cen MT', sans-serif;
        background-color: #FFFFFF;
        margin: 0;
        padding: 0;
    }

    .course-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        justify-items: center;
        padding-top: 70px; /* Compensating for fixed navbar */
    }

    .course-card {
        background-color: #B0E5FD;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
        width: 100%;
    }

        .course-card:hover {
            transform: scale(1.05);
        }

    .course-img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .course-details {
        padding: 20px;
        text-align: left;
    }

    h2 {
        margin-bottom: 10px;
    }

    p {
        color: #555;
        margin-bottom: 8px;
    }

    span {
        font-weight: bold;
    }
</style>


<body>
    <div class="course-container">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="course-card" asp-controller="Home" asp-action="Course" asp-route-search="@item.CourseId" asp-route-id="@item.CourseId">
                    <img class="course-img" src="https://college.spbstu.ru/userfiles/images/news/DO(1).jpg" alt="Course 1 Image">
                    <div class="course-details">
                        <h2>@item.CourseName</h2>
                        <p><span>Автор:</span>@item.CourseAuthor</p>
                        <p><span>Описание:</span>@item.CourseAuthor</p>
                        <p><span>Категория:</span>@item.CourseAuthor</p>
                        <p><span>Дата создания:</span>@item.CourseAuthor</p>
                        <a asp-action="Course" asp-route-search="@item.CourseId" asp-route-id="@item.CourseId" class="btn btn-danger">Читать</a>
                        <a asp-controller="Home" asp-action="AddToFavorite" asp-route-search="@item.CourseId" asp-route-id="@item.CourseId" class="btn btn-danger">Добавить в избранное</a>
                    </div>
                </div>
            }
        }
    </div>
</body>
