@using API.Models
@model User

@{
    ViewData["Title"] = "Курсы";
    var base64Image = ViewData["Image"];
}

<style>
    body {
        font-family: 'Tw Cen MT', sans-serif;
        background-color: #FFFFFF;
        margin: 0;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .course-body {
        font-family: 'Tw Cen MT', sans-serif;
        background-color: #FFFFFF;
        margin: 0;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
    }

    .profile-info {
        width: 100%;
        text-align: center;
        margin-top: 60px; /* Отступ от верхнего края страницы */
    }

    .profile-heading {
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
    }

    .user-details {
        background-color: #B0E5FD;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: left;
        width: 300px;
        margin: 0 auto; /* Центрирование */
    }

    .course-card {
        background-color: #B0E5FD;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin: 20px;
        width: 300px;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .course-card:hover {
            transform: scale(1.05);
        }

    .course-img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .course-details {
        padding: 20px;
        text-align: left;
    }

    h2 {
        color: #FDBD40;
        margin-bottom: 10px;
    }

    p {
        color: #555;
        margin-bottom: 8px;
    }

    span {
        font-weight: bold;
    }
</style>

<body>
    <div class="profile-info">
        @if (Model != null)
        {
            <div class="user-details">
                <div class="profile-heading">
                    <img src="data:image/jpeg;base64, @base64Image" alt="https://college.spbstu.ru/userfiles/images/news/DO(1).jpg">
                </div>
                <p><span>Email:</span> @Model.UserFirstName </p>
                <p><span>Страна:</span> @Model.UserSecondName </p>
                <p><span>Занятость:</span> @Model.UserThirdName </p>
            </div>
        }
    </div>
</body>
