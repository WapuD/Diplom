@using API.Models
@model UserDTO

@{
ViewData["Title"] = "Регистрация";
}


<style>
    body {
        font-family: 'Tw Cen MT', sans-serif;
        background-color: #FFFFFF;
        margin: 0;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    .container {
        background-color: #B0E5FD;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        width: 400px;
        text-align: center;
    }

    h1 {
        color: #FDBD40;
        margin-bottom: 30px;
    }

    label {
        display: block;
        margin-bottom: 10px;
        text-align: left;
        color: #333;
    }

    input {
        width: calc(100% - 20px);
        padding: 10px;
        margin-bottom: 20px;
        box-sizing: border-box;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
    }

    button {
        background-color: #FDBD40;
        color: #FFFFFF;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

        button:hover {
            background-color: #FFA523;
        }

    p {
        margin-top: 20px;
        color: #555;
    }

    a {
        color: #FDBD40;
        text-decoration: none;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }

    /* Скрыть всплывающее окно по умолчанию */
    .popup {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.4);
    }

        .popup:focus {
            display: block;
        }

    /* Стилизация контента всплывающего окна */
    .popup-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
    }

    /* Стилизация кнопки закрытия окна */
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

</style>

<body>
    <h1>Регистрация</h1>

    <button id="popupButton" style="margin-bottom: 20px;">Правила ввода данных</button>
    <div id="popup" class="popup">
        <div class="popup-content">
            <span class="close" onclick="closePopup()">&times;</span>
            <p>Имя и Фамилия: Разрешено использовать только кириллицу</p>
            <p>Логин: Разрешено использовать только латиницу</p>
            <p>Пароль: Разрешено использовать только латиницу и цифры</p>
        </div>
    </div>

    <form method="post" asp-controller="Home" asp-action="CreateUser" enctype="multipart/form-data">
        <label for="userFirstName">Имя:</label>
        <input type="text" id="userFirstName" name="userFirstName" required data-val="true" data-val-regex="Only Latin characters are allowed." data-val-regex-pattern="^[a-zA-Zа-яА-Я]*">

        <label for="userSecondName">Фамилия:</label>
        <input type="text" id="userSecondName" name="userSecondName" required data-val="true" data-val-regex="Only Latin characters are allowed." data-val-regex-pattern="^[a-zA-Zа-яА-Я]*">

        <label for="userLogin">Логин:</label>
        <input type="text" id="userLogin" name="userLogin" required data-val="true" data-val-regex="Only Latin characters are allowed." data-val-regex-pattern="^[a-zA-Zа-яА-Я]*">

        <label for="userPassword">Пароль:</label>
        <input type="password" id="userPassword" name="userPassword" required data-val="true" data-val-regex="Only Latin characters and digits are allowed." data-val-regex-pattern="^[a-zA-Z0-9]*">

        <button type="submit">Зарегистрироваться</button>
    </form>

    <p>Уже зарегистрированы? <a href="@Url.Action("Authorization", "Home")">Войти</a></p>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#popupButton").mouseenter(function () {
                $("#popup").fadeIn();
            });
            $("#closePopup").click(function () {
                $("#popup").fadeOut();
            });
        });
        function closePopup() {
            document.getElementById("popup").style.display = "none";
        }
    </script>
</body>
