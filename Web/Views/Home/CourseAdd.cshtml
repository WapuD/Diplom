@using API.Models
@model Course

@{
    ViewData["Title"] = "Курсы";
    var author = @ViewData["userId"];
}

<style>
    .asd {
        margin-top: 100px;
    }

    body {
        font-family: 'Tw Cen MT', sans-serif;
        background-color: #FFFFFF;
        margin: 0;
        padding: 0;
    }

    .course-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        justify-items: center;
        padding-top: 70px; /* Compensating for fixed navbar */
    }

    .course-card {
        background-color: #B0E5FD;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease;
        width: 100%;
    }

        .course-card:hover {
            transform: scale(1.05);
        }

    .course-img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    .course-details {
        padding: 20px;
        text-align: left;
    }

    h2 {
        margin-bottom: 10px;
    }

    p {
        color: #555;
        margin-bottom: 8px;
    }

    span {
        font-weight: bold;
    }

    .container {
        margin-top: 60px;
    }
</style>


<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Добавить новый курс</h2>
            <form asp-controller="Home" asp-action="CreateCourse" method="post">
                <div class="form-group">
                    <label for="courseName">Название курса:</label>
                    <input type="text" class="form-control" id="courseName" name="courseName" required>
                </div>
                <div class="form-group">
                    <label for="courseDescription">Описание курса:</label>
                    <textarea class="form-control" id="courseDescription" name="courseDescription" rows="4" required></textarea>
                </div>
                <div class="form-group">
                    <label for="courseText">Текст курса:</label>
                    <textarea class="form-control" id="courseText" name="courseText" rows="4" required></textarea>
                </div>
                <div class="form-group">
                    <label for="courseTextRecom">Рекомендации:</label>
                    <textarea class="form-control" id="courseTextRecom" name="courseTextRecom" rows="4" required></textarea>
                </div>
                <div class="form-group">
                    <label for="courseTextWarning">Предупреждения:</label>
                    <textarea class="form-control" id="courseTextWarning" name="courseTextWarning" rows="4" required></textarea>
                </div>

                <div class="form-group">
                    <label for="courseCategory">Категория курса:</label>
                    <select class="form-control" id="courseCategory" name="courseCategory" required>
                        @foreach (var category in ViewBag.MyList)
                        {
                            <option value="@category.CategoryId">@category.CategoryName</option>
                        }
                    </select>
                </div>

                <input type="hidden" id="courseAuthor" name="courseAuthor" value="@author">
                <button type="submit" class="btn btn-primary">Создать курс</button>
            </form>
        </div>
    </div>
</div>
